<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".UserActivity.Programmers">


    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:layoutDirection="ltr"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:text="B00kApp"
            android:id="@+id/FAV_TXT"
            android:fontFamily="@font/vazir"
            android:textColor="@color/white"
            android:textSize="24dp" />
    </LinearLayout>


    <ScrollView
        android:id="@+id/S"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@+id/header"
        android:layout_marginBottom="50dp">

        <TextView
            android:id="@+id/TV_pro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/vazir"
            android:layoutDirection="ltr"
            android:text="This is main text ..."
            android:textColor="@color/white"
            android:textSize="21dp" />
    </ScrollView>


    <ImageView
        android:id="@+id/gitlab_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/S"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:src="@drawable/gitlab" />

    <ImageView
        android:id="@+id/github_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/S"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="100dp"
        android:src="@drawable/github" />

</RelativeLayout>